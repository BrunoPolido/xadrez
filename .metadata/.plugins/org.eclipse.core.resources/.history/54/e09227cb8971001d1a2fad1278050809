import java.util.Scanner;

public class entradaDeDados1 {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		String peca;
		
		int ncasa;
		
		String lcasa;
		System.out.println("==== TABULEIRO XADREZ ===");
		System.out.println("    A  B  C  D  E  F  G  H");
		System.out.println("  --------------------------");
		System.out.println("8 | A8 B8 C8 D8 E8 F8 G8 H8|");
		System.out.println("7 | A7 B7 C7 D7 E7 F7 G7 H7|");
		System.out.println("6 | A6 B6 C6 D6 E6 F6 G6 H6|");
		System.out.println("5 | A5 B5 C5 D5 E5 F5 G5 H5|");
		System.out.println("4 | A4 B4 C4 D4 E4 F4 G4 H4|");
		System.out.println("3 | A3 B3 C3 D3 E3 F3 G3 H3|");
		System.out.println("2 | A2 B2 C2 D2 E2 F2 G2 H2|");
		System.out.println("1 | A1 B1 C1 D1 E1 F1 G1 H1|");
		System.out.println("  --------------------------");
		System.out.println("    A  B  C  D  E  F  G  H");
		
		System.out.println("Digite o nome da Peca que deseja Jogar");
		peca = sc.next();
		
		System.out.printf("Voce Escolheu a Pe√ßa = %s %n", peca);
		
		System.out.println("Escolha a Letra da Casa de A a H");
		lcasa = sc.next();
		
		System.out.printf("Voce Escolheu A letra da casa = %s %n", lcasa);
		
		System.out.println("Escolha o Numero da Casa de 1 a 8");
		ncasa = sc.nextInt();
		
		System.out.printf("Voce escolheu o numero da casa = %d %n", ncasa);
		
		System.out.printf("Sua jogada foi %s%d %n", lcasa,ncasa);
		
		sc.close();
		
	
	}

}
